<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd 
          http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd 
          http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager" />
		<property name="loginUrl" value="/login" />
		<property name="successUrl" value="/index"/>
		<property name="unauthorizedUrl" value="/denied" />
		<property name="filters">
			<map>
				<entry key="authc" value-ref="shiroFormAuthenticationFilter" />
				<!-- <entry key="authUser" value-ref="userInvalidFilter" /> -->
			</map>
		</property>
		<property name="filterChainDefinitions">
			<value>
				<!--  
				/images/** = anon  
				/js/** = anon  
				/easyui/** = anon 
				/css/** = anon
				/download/* = anon
				/nologin/* = anon
				
				/home = anon
				/logout = logout
				/** = authc
				 -->
				 
				/index = anon
                /unauthorized = anon
                
                /login = authc
                /rest = authc
                /logout = logout
                /admin = authc, roles[Admin]
                /register = authc, roles[Register]
			</value>
		</property>
	</bean>
    
    
    <!-- 安全管理  -->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="realm" ref="shiroRealm" />
		<property name="cacheManager" ref="cacheManager" />
	</bean>
	
    <bean id="shiroRealm" class="com.maven01.web.security.ShiroRealm">
          <property name="userService" ref="userService"/>
    </bean>
    
    <bean id="cacheManager" class="org.apache.shiro.cache.ehcache.EhCacheManager">
       <property name="cacheManagerConfigFile" value="classpath:ehcache.xml"/> 
    </bean>
    
    <!-- 上面用的 -->
    <bean id="userService" class="com.maven01.web.service.Impl.UserServiceImpl"/>
    

    <!-- 基于Form表单的身份验证过滤器，不配置将也会注册此过虑器，表单中的用户账号、密码及loginurl将采用默认值，建议配置
                     设置一下username和password,修改了默认的设置-->
	<bean id="shiroFormAuthenticationFilter"  class="com.maven01.web.security.ShiroFormAuthenticationFilter">
		<!-- 表单中账号的input名称 -->
		<property name="usernameParam" value="username" />
		<!-- 表单中密码的input名称 -->
		<property name="passwordParam" value="password" />
     </bean>
     
     
     <bean id="logout" class="org.apache.shiro.web.filter.authc.LogoutFilter"> 
        <property name="redirectUrl" value="/home" /> 
     </bean> 
   
     <!--  
     <bean id="userInvalidFilter" class="com.gochinatv.accelarator.security.UserInvalidFilter"/>
     -->
     
</beans>
