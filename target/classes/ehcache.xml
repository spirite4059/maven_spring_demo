<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<diskStore path="java.io.tmpdir" />

	<!-- eternal 不准许系统清理session的空间;  overflowToDisk 内存满了往硬盘写-->
	<defaultCache 
	   maxElementsInMemory="10000" 
	   eternal="true"
	   timeToIdleSeconds="120" 
	   timeToLiveSeconds="120" 
	   overflowToDisk="true" />

