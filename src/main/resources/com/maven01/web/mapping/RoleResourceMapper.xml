<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maven01.web.dao.RoleResourceDao">

	<resultMap id="RoleResource" type="com.maven01.web.bean.RoleResource" >
		<id property="id" column="id" />
		<result property="roleId" column="roleId" />
		<result property="resourceId" column="resourceId" />
	</resultMap>

	<insert id="insertAll" parameterType="java.util.List">
	   insert into role_resource(
	             roleId,
	             resourceId
	            ) values 
	    <foreach collection="list" item="item" index="index" separator="," >
	        (
	            #{item.roleId},
	            #{item.resourceId}
	        )
	    </foreach>
	</insert>
	
	<delete id="deleteByEntity" parameterType="com.maven01.web.bean.RoleResource">
	  	delete from role_resource where roleId = #{roleId}
	</delete>
	
	<select id="getListByRoleId" resultMap="RoleResource" parameterType="int">
		select * from role_resource where roleId=#{roleId}
	</select>
	
</mapper>

