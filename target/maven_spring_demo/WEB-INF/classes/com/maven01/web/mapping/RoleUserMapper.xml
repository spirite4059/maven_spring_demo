<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maven01.web.dao.RoleUserDao">

	<resultMap type="RoleUser" id="RoleUser">  
		<id property="id" column="id" />
		<result property="roleId" column="role_id" />
		<result property="userId" column="user_id" />
	</resultMap>
	
	<insert id="insertAll" parameterType="java.util.List">
	   insert into role_user(
	             roleId,
	             userId
	            ) values 
	    <foreach collection="list" item="item" index="index" separator="," >
	        (
	            #{item.roleId},
	            #{item.userId}
	        )
	    </foreach>
	</insert>
	
	<delete id="deleteByEntity" parameterType="RoleUser">
	  delete from role_user where roleId = #{roleId}
	</delete>
	
	<select id="getListByRoleId" resultMap="RoleUser" parameterType="int">
		select * from role_user where roleId=#{roleId}
	</select>
	
</mapper>