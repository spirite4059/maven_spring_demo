<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maven01.web.dao.RoleDao">

	<resultMap type="Role" id="Role">
		<id property="id" column="id" />
		<result property="roleName" column="rolName" />
		<result property="remark" column="remark" />
	</resultMap>

	<select id="getListByEntity" resultMap="Role" parameterType="Role">
		select * from role where 1=1
		<if test="roleName!=null and roleName!=''">
            and roleName like CONCAT('%',#{roleName},'%')
		</if>
	</select>
	
	<insert id="save" parameterType="Role">
	   insert into role(
	            roleName,
	            remark
	            ) values (
	            #{roleName},
	            #{remark}
	            )
	</insert>
	
	<update id="update" parameterType="Role">
		update role set roleName=#{roleName},remark=#{remark} where id = #{id}
	</update>
	
	<delete id="deleteByEntity" parameterType="Role">
	  delete from role where id = #{id}
	</delete>
</mapper>


